{
    "name": "rshell-monit",
    "script": "index.js",
    "instances": "1",
    "exec_mode"  : "fork_mode",
    "out_file": "./logs/pm2.access.log",
    "error_file": "./logs/pm2.error.log",
    "cron_restart": "1 0 * * *",
    "merge_logs": true,
    "exec_interpreter" : "node",
    "env": {
        "NODE_ENV": "production"
    },
    "node_args": "--harmony"
}
